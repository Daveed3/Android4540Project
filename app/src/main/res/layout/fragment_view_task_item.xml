<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/task_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorTaskName"
                android:hint="Enter Task Name here"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/task_item_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorTextBackground"
                android:hint="Enter details here"
                android:padding="10dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/skills_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorTaskItem"
                android:padding="10dp"
                android:text="@string/skills_needed"
                android:textColor="@color/colorFileText"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/skills_needed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorTextBackground"
                android:hint="Enter skills needed here"
                android:padding="10dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/add_skills"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/add_skill"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/files"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorTaskItem"
                android:padding="10dp"
                android:text="@string/files"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/file_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorTextBackground"
                android:hint="Enter file names here"
                android:padding="10dp"
                android:textColor="@color/colorFileText"
                android:textSize="20sp" />

            <Button
                android:id="@+id/upload_file_button"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/upload_file"
                android:textSize="20dp" />

            <Button
                android:id="@+id/finished_button"
                style="@android:style/Widget.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/finished"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>
</layout>